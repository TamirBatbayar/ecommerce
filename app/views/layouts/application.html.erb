<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Ecommerce" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Ecommerce" %>">
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <header>
      <%= render 'layouts/navigation' %>
    </header>
    <main role="main">
       <%= render 'layouts/messages' %>
       <% if user_signed_in? %>
       <p>Current user_id:<%= current_user.id %>, Username:  <%= current_user.name %> Role: <%= current_user.role %></p>
         <% if current_user.admin? %>
           <h1>Welcome! Admin san</h1>
         <% end %>
       <% end %>

       <%= yield %>
    </main>
  </body>
</html>
