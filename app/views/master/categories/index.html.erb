<p id="notice"><%= notice %></p>

<h1>Listing Master Categories</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @master_categories.each do |master_category| %>
      <tr>
        <td><%= master_category.name %></td>
        <td><%= link_to 'Show', master_category, :class => "btn btn-lg btn-default" %></td>
        <td><%= link_to 'Edit', edit_master_category_path(master_category), :class => "btn btn-lg btn-default" %></td>
        <td><%= link_to 'Destroy', master_category, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-lg btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_master_category_path, :class => "btn btn-lg btn-default" %>
