<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<div class="row">
  <div class="col-md-3">
      <div class="list-group">
          <% categories = category %>
          <% categories.each do |category| %>
              <%= link_to category.name, search_by_category_path(:category => category.id), :class => "list-group-item" %>
          <% end %>
      </div>
  </div>
  
  <div class="col-md-9">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Amount</th>
          <th>Category</th>
          <th>Detail</th>
          <th>Owner id</th>
          <th>Picture</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.price %></td>
            <td><%= product.amount %></td>
            <td><%= category_return(product.category).name %></td>
            <td><%= product.detail %></td>
            <td><%= product.user.id %></td>
            <td><%= image_tag product.picture.url(:thumb) %></td>
            <td><%= link_to 'Show', product %></td>
            <% if user_signed_in? %>
              <% if current_user.id == product.user.id %>
                <td><%= link_to 'Edit', edit_product_path(product) %></td>
                <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% else %>
                <td>You're not allowed to edit</td>
                <td>You're not allowed to delete</td>
              <% end %>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Product', new_product_path %>
  </div>
</div>
